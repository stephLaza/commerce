{% extends 'base.html.twig' %}

{% block title %}Menu
{% endblock %}

{% block body %}
	<main
		id="main">
		<!-- ======= Menu Section ======= -->
		<section id="menu" class="menu section-bg m100">
			<div class="container" data-aos="fade-up">

				<div class="section-title">
					<h2>Menu</h2>
					<p>Check Our Tasty Menu</p>
				</div>

				<div class="row" data-aos="fade-up" data-aos-delay="100">
					<div class="col-lg-12 d-flex justify-content-center">
						<ul id="menu-flters">
							<li data-filter="*" class="filter-active">Tous</li>
							<li data-filter=".filter-starters">Entrées</li>
							<li data-filter=".filter-salads">Salades</li>
							<li data-filter=".filter-specialty">Plats</li>
              <li data-filter=".filter-desserts">Desserts</li>
						</ul>
					</div>
				</div>

				<div class="row menu-container" data-aos="fade-up" data-aos-delay="200">
					{% for entree in entrees %}

						<div class="col-lg-6 menu-item filter-starters">
							<img src="{{asset('uploads/' ~ entree.image)}}" class="menu-img" alt="{{entree.name}}">
							<div class="menu-content">
								<a href="#">{{entree.name}}</a>
								<span>{{ (entree.price / 100)|number_format(2, ',','.')}} €</span>
							</div>
							<div class="menu-ingredients">
								{{entree.description}}
							</div>
						</div>

					{% endfor %}

					{% for salade in salades %}
						<div class="col-lg-6 menu-item filter-salads">
							<img src="{{asset('uploads/' ~ salade.image)}}" class="menu-img" alt="{{salade.name}}">
							<div class="menu-content">
								<a href="#">{{salade.name}}</a>
								<span>{{ (salade.price / 100)|number_format(2, ',','.')}} €</span>
							</div>
							<div class="menu-ingredients">
							{{salade.description}}
							</div>
						</div>

					{% endfor %}

					{% for plat in plats %}
					<div class="col-lg-6 menu-item filter-specialty">
						<img src="{{asset('uploads/' ~ plat.image)}}" class="menu-img" alt="{{plat.name}}">
						<div class="menu-content">
							<a href="#">{{plat.name}}</a>
								<span>{{ (plat.price / 100)|number_format(2, ',','.')}} €</span>
						</div>
						<div class="menu-ingredients">
						{{plat.description}}
						</div>
					</div>
		{% endfor %}
					{% for dessert in desserts %}
					<div class="col-lg-6 menu-item filter-desserts">
						<img src="{{asset('uploads/' ~ dessert.image)}}" class="menu-img" alt="{{dessert.name}}">
						<div class="menu-content">
								<a href="#">{{dessert.name}}</a>
								<span>{{ (dessert.price / 100)|number_format(2, ',','.')}} €</span>
						</div>
						<div class="menu-ingredients">
							{{dessert.description}}
						</div>
					</div>
		{% endfor %}
					
					

				</div>

			</div>
		</section>
		<!-- End Menu Section -->
	</main>
{% endblock %}
