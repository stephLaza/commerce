{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<main id="main">
		<section id="book-a-table" class="book-a-table m100">
			<div class="row mr-5" >
				<form method="post" class="col-6 mx-auto">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							You are logged in as
							{{ app.user.username }},
							<a href="{{ path('app_logout') }}">Deconnexion</a>
						</div>
					{% endif %}

					<h1 class="h3 mb-3 font-weight-normal">Merci de rentrer vos indentifiants de connexion</h1>
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control my-1" required autofocus>
					<label for="inputPassword">Mot de passe</label>
					<input type="password" name="password" id="inputPassword" class="form-control my-1" required>

					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{#
					        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
					        See https://symfony.com/doc/current/security/remember_me.html
					
					        <div class="checkbox mb-3">
					            <label>
					                <input type="checkbox" name="_remember_me"> Remember me
					            </label>
					        </div>
					    #}
					<div class="text-center mt-2">
						<button class="btn book-a-table-btn  text-center mx-auto" type="submit">
							Connexion
						</button>
					</div>
<hr>
				</form>
                <div class="col-12 text-center">
                <p>
                <a href="{{ path('inscription')}}" class="book-a-table-btn btn">Cr√©er un compte ?</a>
                </p>
							
						</div>
			</div>
		</section>
		<!-- End Book A Table Section -->
	</main>
{% endblock %}
